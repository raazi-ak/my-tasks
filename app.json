{
  "expo": {
    "name": "My Tasks",
    "slug": "my-tasks",
    "description": "A beautiful and intuitive task management app with modern UI and powerful features",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mytasks",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.raazifaisal.mytasks"
    },
    "android": {
      "package": "com.raazifaisal.mytasks",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#3A7BD5"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "sounds": ["./assets/audio/notification.mp3"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
